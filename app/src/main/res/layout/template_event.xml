<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardBackgroundColor="@color/Isabelline"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <View
            android:id="@+id/template_img_calendar"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/template_txt_desc"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/template_txt_event"
            android:background="@color/Ash_grey"/>

        <View
            android:id="@+id/template_txt_event"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            app:layout_constraintRight_toLeftOf="@+id/template_img_calendar"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/Ash_grey"/>

        <View
            android:id="@+id/template_txt_desc"
            android:layout_width="90dp"
            android:layout_height="15dp"
            app:layout_constraintRight_toRightOf="@+id/template_txt_event"
            app:layout_constraintTop_toBottomOf="@+id/template_txt_event"
            android:layout_marginTop="3dp"
            android:background="@color/Ash_grey"/>

        <View
            android:id="@+id/template_img_map"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="2dp"
            app:layout_constraintDimensionRatio="h,1:0.8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/template_txt_desc"
            android:background="@color/Ash_grey"/>

        <View
            android:id="@+id/template_txt_address"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/template_img_map"
            app:layout_constraintLeft_toRightOf="@+id/vertical_guideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/template_img_map"
            android:background="@color/Ash_grey"/>

        <View
            android:id="@+id/template_img_time"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="@+id/template_img_calendar"
            app:layout_constraintTop_toBottomOf="@+id/template_txt_address"
            android:background="@color/Ash_grey"/>

        <View
            android:layout_width="170dp"
            android:layout_height="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/template_img_time"
            app:layout_constraintRight_toLeftOf="@+id/template_img_time"
            app:layout_constraintTop_toTopOf="@+id/template_img_time"
            android:layout_marginRight="4dp"
            android:background="@color/Ash_grey"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
