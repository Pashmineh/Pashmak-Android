<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/Dark_tangerine</item>
        <item name="colorControlNormal">@color/Ash_grey</item>

        <item name="android:windowBackground">@color/Platinium</item>
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="android:fontFamily">@font/yekan_regular</item>
    </style>

    <style name="BaseTheme.AppTheme"/>

    <style name="TextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/Ash_grey</item>
        <item name="android:textColor">@color/Dark_tangerine</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

</resources>
